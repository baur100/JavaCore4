<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Yana Suite" thread-count="3" parallel="tests">
    <test name="Chrome Browser">
        <classes>
            <class name="koelTestsChromeYK.LoginToKoel">
                <methods>
                    <include name="loginPass"/>
                    <include name="loginFail"/>
                </methods>
            </class>
            <class name="koelTestsChromeYK.PlaylistCreate">
                <methods>
                    <include name="createPlaylist"/>
                    <include name="deletePlaylist"/>
                </methods>
            </class>
            <class name="koelTestsChromeYK.PlaylistRename">
                <methods>
                    <include name="playlistRename"/>
                    <include name="playlistRename2"/>
                </methods>
            </class>
            <class name="koelTestsChromeYK.ScrollPage">
                <methods>
                    <include name="scrollToLastPlaylist"/>
                    <include name="scrollToTopAlbums"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Firefox Browser">
        <classes>
            <class name="koelTestsMozillaYK.LoginToKoel">
                <methods>
                    <include name="loginPass"/>
                    <include name="loginFail"/>
                </methods>
            </class>
            <class name="koelTestsMozillaYK.PlaylistCreate">
                <methods>
                    <include name="createPlaylist"/>
                    <include name="deletePlaylist"/>
                </methods>
            </class>
            <class name="koelTestsMozillaYK.ScrollPage">
                <methods>
                    <include name="scrollToLastPlaylist"/>
                    <include name="scrollToTopAlbums"/>
                </methods>
            </class>
            <class name="koelTestsMozillaYK.PlaylistRename">
                <methods>
                    <include name="playlistRename"/>
                    <include name="playlistRename2"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="API">
        <classes>
            <class name="APITestingYK.PetGet">
                <methods>
                    <include name="getPetById"/>
                    <exclude name="deletePet"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>