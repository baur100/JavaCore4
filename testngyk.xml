<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Yana Suite" thread-count="3" parallel="classes">
    <test name="Chrome Browser">
        <classes>
            <class name="HomeTests.LoginToKoel">
                <methods>
                    <include name="loginPass"/>
                    <include name="loginFail"/>
                </methods>
            </class>
            <class name="HomeTests.PlaylistCreate">
                <methods>
                    <include name="createPlaylist"/>
                    <include name="deletePlaylist"/>
                </methods>
            </class>
            <class name="HomeTests.ScrollPage">
                <methods>
                    <include name="scrollToLastPlaylist"/>
                    <include name="scrollToTopAlbums"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>